---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'MindSearch — Search Engine + LLM Agents = Answer Engine',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Demo',
        href: '/mindsearch/demo',
        icon: 'tabler:video',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
    <!-- <span class="text-accent dark:text-white highlight">思·索</span> MindSearch<br> -->
    <div style="font-size: 65px">
    <span style="font-size: 80px">Deeper</span> and <span style="font-size: 80px">Wider</span> Search Engine</span><br>
    powered by <span class="dark:text-white highlight" style="color:rgb(0, 114, 227)"> LLM Agents</span>
    </div>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">MindSearch</span> is an open-sourced AI search engine framework, with comparable performance with Perplexity.ai Pro.</span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AstroWind: Production-ready.</span>
      Deploy your own Perplexity.ai style search engine!
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note/>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What is new in MindSearch?"
    subtitle="One of the most powerful answer engines with Large Language Models (LLM)."
    items={[
      {
        title: 'Ask Everything You Want to Know',
        description:
          'MindSearch is designed to solve any question in your life and use web knowledge ',
        icon: 'tabler:bulb',
      },
      {
        title: 'In-depth Knowledge Discovery',
        description:
          'MindSearch browses hundreds of web pages to answer your question, providing deeper and wider knowledge base answer',
        icon: 'tabler:rocket',
      },
      {
        title: 'Detailed Solution Path',
        description:
          'MindSearch exposes all details, allowing users to check everything they want. This greatly improves the credibility of its final response as well as usability',
        icon: 'tabler:list-check',
      },
      {
        title: 'Multi-Agents LLM Framework',
        description:
          'A seamless integration between multiple LLM agents, enabling 300+ web browsing within 1 min',
        icon: 'tabler:components',
      },
      {
        title: 'All Open-Sourced',
        description:
          "Every piece of code is open-sourced, embracing a culture that is open to new ideas and contributions. Deploy for your own answer engine!",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Optimized UI Experimence',
        description:
          'Providing all kinds of interfaces for users, including React, Streamlit, Terminal. Choose any type based on your need',
        icon: 'tabler:brand-tailwind',
      }
    ]}
  />

  <Features2
    title="Compared with other AI Search Engine"
    subtitle="Comparison on human preference based on depth, breadth, factuality of the response generated by ChatGPT-Web, Perplexity.ai (Pro), and MindSearch"
    tagline="Performance"
    image={{
      src: '~/assets/images/openset.png',
      alt: 'Steps image',
    }}
  >
    <img src=""/>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent">
      </div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Downloads', amount: '14.1K' },
      { title: 'Stars', amount: '1.1K' },
      { title: 'Forks', amount: '106' },
      { title: 'Users', amount: '1K+' },
    ]}
  />

